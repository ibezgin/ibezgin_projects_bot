{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "types": ["node"],
        "typeRoots": ["node_modules", "src/@types/**/**"]
    },
    "exclude": ["node_modules", "dist"]
    // "include": ["global.d.ts", "thirdparty.d.ts", "src"]
}
